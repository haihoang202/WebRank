extends index
block content
  -var site_all = JSON.parse(sites);
  table(class="table table-hover table-striped")
    thead(class="thead-inverse")
      tr
        th(class="col-md-1") Rank
        th(class="col-md-2") URL
        th(class="col-md-6") Description
        th(class="text-center col-md-3") Action
    tbody
    each site in site_all
      tr
        td(class="col-md-1")
          p= site.rank
        td(class="col-md-2")
          p= site.url
        td(class="col-md-6")
          p= site.desc
        td(class="text-center col-md-3")
          a(class="btn btn-primary", href="http://www."+site.url).
            <span class="glyphicon glyphicon-eye-open"></span>
            Visit
          a(class="btn btn-danger", href="http://www.alexa.com"+site.alexa).
            <span class="glyphicon glyphicon-new-window"></span>
            Details
